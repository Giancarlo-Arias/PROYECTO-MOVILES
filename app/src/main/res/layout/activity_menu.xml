<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWelcome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/button_listar_platillos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ListarPlatillos"
            android:text="Listar platillos" />

        <Button
            android:id="@+id/button_listar_ingredientes_especiales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ListarIngredientesEspeciales"
            android:text="Listar ingredientes especiales" />

        <Button
            android:id="@+id/btnRegistrarOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="RegistrarOrden"
            android:text="Registrar Orden" />

        <Button
            android:id="@+id/btnLogOut2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesion" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>